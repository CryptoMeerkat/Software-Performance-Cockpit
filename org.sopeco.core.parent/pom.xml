<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sap.ldi</groupId>
		<artifactId>ldi-tycho-parent</artifactId>
		<version>5.2.0</version>
	</parent>

	<groupId>org.sopeco.core</groupId>
	<artifactId>org.sopeco.core.parent</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Software Performance Cockpit - Core</name>

	<modules>
		<module>../org.sopeco.core.target</module>
		<module>../org.sopeco.core.feature</module>
		<module>../org.sopeco.core.updatesite</module>
		<module>../org.sopeco.core.common</module>
		<module>../org.sopeco.core.persistence</module>
		<module>../org.sopeco.core.experiment</module>
		<module>../org.sopeco.core.experiment.interfaces</module>
		<module>../org.sopeco.core.satellite.interfaces</module>
		<module>../org.sopeco.satellite.adapter.interfaces</module>
		<module>../org.sopeco.satellite</module>
		<module>../org.sopeco.analysis.controller</module>
		<module>../org.sopeco.analysis.interfaces</module>
		<module>../org.sopeco.analysis.results</module>
		<module>../org.sopeco.experimentseries</module>
		<module>../org.sopeco.experimentseries.exploration.interfaces</module>
		<module>../org.sopeco.export.interfaces</module>
		<module>../org.sopeco.export.controller</module>

		<module>../org.sopeco.validation</module>
		<module>../org.sopeco.validation.interfaces</module>
		<module>../org.sopeco.analysis.plugin.rstatistics</module>

		<module>../org.sopeco.core.emfutils</module>
		<module>../org.sopeco.core.edit</module>
		<module>../org.sopeco.core.editor</module>

		<module>../org.sopeco.persistence.visualisation</module>
		<module>../org.sopeco.persistence.visualisation.model</module>
		<module>../org.sopeco.persistence.visualisation.edit</module>
		<module>../org.sopeco.persistence.visualisation.editor</module>

		<module>../org.sopeco.export.plugin.csv</module>
		<module>../org.sopeco.experimentseries.exploration.fullexploration</module>
		<module>../org.sopeco.experimentseries.exploration.adaptivebd</module>
		<module>../org.sopeco.maincontroller</module>

		<!-- <module>../org.sopeco.core.edit.extended</module> -->

	</modules>


	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<configuration>
					<target>
						<artifact>
							<groupId>${project.groupId}</groupId>
							<artifactId>org.sopeco.core.target</artifactId>
							<version>${project.version}</version>
							<classifier>core</classifier>
						</artifact>
					</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<outputFileFormat>xml</outputFileFormat>
					<consoleOutput>false</consoleOutput>
					<enableRSS>false</enableRSS>
					<linkXRef>false</linkXRef>
					<configLocation>checkstyle-sopeco.config.xml</configLocation>
					<sourceDirectory>${basedir}/src</sourceDirectory>
					<encoding>${project.build.sourceEncoding}</encoding>
					<failOnViolation>false</failOnViolation>
					<violationSeverity>error</violationSeverity>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>